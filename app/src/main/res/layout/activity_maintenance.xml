<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maintenance"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#F7F5F6">

        <RelativeLayout
            android:id="@+id/backLayout"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            >


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>


        <TextView
            android:id="@+id/accountTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center|center_vertical"
            android:text="UNDER MAINTENANCE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#908E8F"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <TextView
        android:id="@+id/goBackTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:text="GO BACK"
        android:padding="15dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_above="@+id/goBackTextView"
        >

        <ImageView
            android:id="@+id/maintenanceImageView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:src="@drawable/maintenance" />


        <TextView
            android:id="@+id/sorryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#161616"
            android:textSize="19sp"
            android:text="Sorry!"
            android:layout_below="@+id/maintenanceImageView"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/maintenanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sorryTextView"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text=""
            />


    </RelativeLayout>





</RelativeLayout>
