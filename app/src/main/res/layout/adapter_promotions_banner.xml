<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white"
    android:layout_marginLeft="@dimen/_5sdp"
    android:id="@+id/rly_parent">

    <ImageView
        android:id="@+id/img_promo_status"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/badge_promotions_banner"/>

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/badge_promotions_banner"/>

    <ImageView
        android:id="@+id/img_promotion"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/promotions_select"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_15sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_promotion"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10% OFF for Takeaway"
            android:fontFamily="@font/baloo2_bold"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enjoy 10% off for your 1st purchase"
            android:fontFamily="@font/baloo2_regular"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8ssp"/>

    </LinearLayout>




</RelativeLayout>