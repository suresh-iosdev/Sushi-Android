<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:layout_marginTop="@dimen/_1sdp"
    android:background="#EEF3F9"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subImage"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/burger_image"
        android:scaleType="fitXY"
        android:layout_weight="0.6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
       />
    <LinearLayout
        android:padding="@dimen/_8sdp"
        android:orientation="vertical"
        android:layout_weight="1.4"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

     <TextView
         android:id="@+id/productName"
         android:textSize="@dimen/_13ssp"
         android:text="Product Name"
         android:textStyle="bold"
         android:fontFamily="@font/gotham_medium"
         android:textColor="@color/colorBlack"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/descriptions"
            android:textSize="@dimen/_11ssp"
            android:text="Sample Description of the product will be availabel here"
            android:textColor="#898D90"
          android:fontFamily="@font/gothamnarrowbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/_2sdp"
                android:textSize="@dimen/_11ssp"
                android:text="$"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/price"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:textSize="@dimen/_15ssp"
                android:text="9.90"
         android:textStyle="bold"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/AddtoCartBtn"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textStyle="bold"
                android:background="@drawable/outofstockbackground"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:layout_gravity="end"
                android:fontFamily="@font/gotham_medium"
                android:text="Add To Cart"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
