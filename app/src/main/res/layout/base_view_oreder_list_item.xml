<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <com.app.sushi.tei.CustomViews.CustomTextView.Opensans.OpenSansBoldTextView
        android:id="@+id/qtyTextView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/priceTextView"
        android:gravity="right"
        android:text="9"
        android:layout_centerVertical="true"
        android:textColor="#3F3F3F"
        android:textSize="12sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/productLinlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/qtyTextView"
        android:orientation="vertical">

        <com.app.sushi.tei.CustomViews.CustomTextView.CenturyGothic.CenturyGothicBold
            android:id="@+id/itemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textColor="#3F3F3F"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/modifierLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.app.sushi.tei.CustomViews.CustomTextView.CenturyGothic.CenturyGothicRegular
                android:id="@+id/modifierTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:minLines="0"
                android:text=""
                android:textColor="#000000"
                android:textSize="11sp" />

            <!-- <TextView
                 android:id="@+id/subMenuTextView"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:minLines="0"
                 android:text=""
                 android:textColor="#000000"
                 android:visibility="gone"
                 />-->

            <RelativeLayout
                android:id="@+id/babyCardImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/modifierTextView"
                android:layout_marginLeft="20dp"
                android:visibility="gone">

                <com.app.sushi.tei.CustomViews.CustomTextView.BebasNeue.BebasNeueRegularTextView
                    android:id="@+id/bcPhotoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Photo: "
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/babyPackImageView"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/bcPhotoTextView" />


            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


    <com.app.sushi.tei.CustomViews.CustomTextView.Opensans.OpenSansBoldTextView
        android:id="@+id/priceTextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:gravity="right"
        android:text="$ 1999.80"
        android:textColor="#3F3F3F"
        android:layout_centerVertical="true"
        android:textSize="11sp"
        android:textStyle="bold" />


    <!--android:text="Hot Basil Chicken \n Pizza Size: Small \n Pizza Type: Regular"-->


</RelativeLayout>