<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/add_more">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/greenbg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add address"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:fontFamily="@font/baloo2_bold"
            android:textSize="@dimen/_12ssp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/icon_close_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/edt_postal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Postal code"
        android:background="@drawable/add_product_background"
        android:textSize="@dimen/_10ssp"
        android:padding="@dimen/_7sdp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/baloo2_medium"/>

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:background="@drawable/add_product_background"
        android:textSize="@dimen/_10ssp"
        android:padding="@dimen/_7sdp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/baloo2_medium"/>


    <EditText
        android:id="@+id/edt_unitNo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit No. 1"
        android:background="@drawable/add_product_background"
        android:textSize="@dimen/_10ssp"
        android:padding="@dimen/_7sdp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/baloo2_medium"/>

    <EditText
        android:id="@+id/edt_unitNo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit No. 2"
        android:background="@drawable/add_product_background"
        android:textSize="@dimen/_10ssp"
        android:padding="@dimen/_7sdp"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/baloo2_medium"/>

    <TextView
        android:id="@+id/txt_Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/checkout_paynow_background"
        android:text="Continue"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/baloo2_bold"
        android:textSize="@dimen/_12ssp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"/>
</LinearLayout>




