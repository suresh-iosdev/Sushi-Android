<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/forgot_bg"
    android:layout_margin="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/asset58"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_bold"
            android:text="Forgot Your Membership Password?"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_regular"
            android:layout_marginTop="@dimen/_minus5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="You can reset your membership password here"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_9ssp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/mobile_num_bg"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_3sdp"
                android:fontFamily="@font/gillsansmedium"
                android:text="SG"/>
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@color/sliver"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_3sdp"
                android:background="@null"
                android:fontFamily="@font/gillsansmedium"
                android:text="+65"/>
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@color/sliver"/>
            <ImageView
                android:layout_width="@dimen/_10ssp"
                android:layout_height="@dimen/_10ssp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center_vertical"
                android:tint="@color/graydark"
                android:rotation="270"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">
            <EditText
                android:id="@+id/forgot_mobile_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/add_product_background"
                android:fontFamily="@font/gillsans"
                android:gravity="center"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:maxLength="8"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp"
                tools:ignore="HardcodedText,TextFields"
                android:visibility="visible"/>
            <Button
                android:id="@+id/forget_getotp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_27sdp"
                android:layout_weight="0.25"
                android:background="@drawable/validate_bg"
                android:fontFamily="@font/gillsansmedium"
                android:text="Get otp"
                android:textAllCaps="true"
                android:textColor="@color/greendark"
                android:textSize="@dimen/_11ssp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_login"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_otp_validate"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:weightSum="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/forgot_otp_verify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/add_product_background"
            android:fontFamily="@font/gillsans"
            android:gravity="center"
            android:hint="OTP"
            android:inputType="phone"
            android:maxLength="8"
            android:padding="@dimen/_7sdp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp"
            tools:ignore="HardcodedText,TextFields"
            android:visibility="visible"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_27sdp"
            android:id="@+id/forgot_otp_validate"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:textAlignment="center"
            android:layout_weight="0.25"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:textAllCaps="true"
            android:textColor="@color/greendark"
            android:background="@drawable/validate_bg"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/gillsansmedium"
            android:text="VALIDATE"/>
    </LinearLayout>

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:hint="Enter New Password"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:fontFamily="@font/baloo2_regular"
        android:background="@drawable/add_product_background"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        tools:ignore="HardcodedText,TextFields"
        android:padding="@dimen/_7sdp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:hint="Enter Confirm Password"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:fontFamily="@font/baloo2_regular"
        android:background="@drawable/add_product_background"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        tools:ignore="HardcodedText,TextFields"
        android:padding="@dimen/_7sdp"
        android:inputType="textPassword"
        />


    <Button
        android:id="@+id/btn_forgot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/greendark"
        android:fontFamily="@font/gillsansmedium"
        android:text="SUBMIT"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/_11ssp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_login"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/forgot_back_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/gillsans"
        android:gravity="center"
        android:text="Back to Login"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        tools:ignore="DuplicateIds,HardcodedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Login"/>

</LinearLayout>