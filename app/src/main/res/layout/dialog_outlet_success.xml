<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_red_bg"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/delLogoImageView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:src="@drawable/positive_vote" />

        <TextView
            android:id="@+id/crewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center_horizontal"
            android:text="AWESOME"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titlePickupLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center_horizontal"
            android:text="You Can Pickup"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subTitlePickupLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/gilroy_regular"
            android:gravity="center"
            android:text="Your Pickup Location"
            android:textColor="#585858"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/deliveryAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="37, JALAN RUMAH TINGGI, Singapore 150037"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

