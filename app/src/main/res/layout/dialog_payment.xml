<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_loginLabel"
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:fontFamily="@font/baloo2_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Payment"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_20ssp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:padding="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:fontFamily="@font/baloo2_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Please enter your card details and proceed"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_10ssp"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_transparent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/rectangle_white">

            <EditText
                android:id="@+id/EmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card Number"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:fontFamily="@font/baloo2_regular"
                android:background="@drawable/add_product_background"
                android:textSize="@dimen/_12ssp"
                android:gravity="center"
                tools:ignore="HardcodedText,TextFields"
                android:padding="@dimen/_7sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MM/YY"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/baloo2_regular"
                    android:background="@drawable/add_product_background"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="center"
                    tools:ignore="HardcodedText,TextFields"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_7sdp"
                    android:layout_weight=".5"
                    android:layout_marginRight="@dimen/_5sdp"/>

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CVV"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/baloo2_regular"
                    android:background="@drawable/add_product_background"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="center"
                    tools:ignore="HardcodedText,TextFields"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_7sdp"
                    android:layout_weight=".5"
                    android:layout_marginLeft="@dimen/_5sdp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo2_regular"
                    android:text="Remember me"
                    android:textColor="@color/sliver"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:id="@+id/Login"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:text="Continue"
        android:fontFamily="@font/baloo2_bold"
        android:background="@drawable/checkout_paynow_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/layout_login"
        android:visibility="visible"/>

</LinearLayout>