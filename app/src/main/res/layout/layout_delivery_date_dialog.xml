<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
   ><!--mardin_dialog-->


    <RelativeLayout
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rectangle_white_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/layoutClose"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/asset58" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutClose"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:visibility="gone"
                android:id="@+id/image_log"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
              />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="AWESOME"
                android:fontFamily="@font/gillsansmedium"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_locationlabel"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="18dp"
                android:fontFamily="@font/gillsansmedium"
                android:textStyle="bold" />

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/layoutDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <TextView
                android:visibility="visible"
                android:id="@+id/txtDeliveryAddressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gillsans"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="14dp" />

            <TextView
                android:visibility="visible"
                android:id="@+id/txtDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold" />
                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="#484848" />

            <TextView
                android:id="@+id/selectdataandtimeinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Select Your Date &amp; Time"
                android:fontFamily="@font/gillsansmedium"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:id="@+id/layoutDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite">

                    <RelativeLayout
                        android:id="@+id/layoutchild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtDeliveryDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@drawable/add_product_background"
                            android:fontFamily="@font/gillsansmedium"
                            android:gravity="center_vertical"
                            android:paddingLeft="13dp"
                            android:text="Select Date"
                            android:textColor="#5E5E5E"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="13dp"
                            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:rotation="0" />
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/txtDeliveryTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/add_product_background"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/gillsansmedium"
                        android:paddingLeft="13dp"
                        android:text="Select Time"
                        android:textColor="#5E5E5E"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:rotation="0" />


                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/txtContinue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/checkout_paynow_background"
                android:fontFamily="@font/gillsansmedium"
                android:gravity="center"
                android:text="Continue"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txtGoBack"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Go Back"
                android:fontFamily="@font/gillsansmedium"
                android:textAllCaps="true"
                android:textColor="#A3A3A3"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutCalendar"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="375dp"
        android:visibility="gone">


        <include
            android:id="@+id/customCalendar"
            layout="@layout/calendar_layout" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="375dp"
            android:layout_weight="0.5"/>

        <RelativeLayout
            android:id="@+id/layoutCustomTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="375dp"
            android:layout_weight="0.5"
            android:background="@drawable/payment_edittext_shape"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/timeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>