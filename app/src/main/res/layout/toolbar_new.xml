<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greendark"
    android:minHeight="?attr/actionBarSize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/toolbarBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
           >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:rotation="0"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_right_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbarMenuNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/toolbarBack"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_menu_nav"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:rotation="0"
                android:src="@drawable/menu_01" />

        </LinearLayout>

        <ImageView
            android:id="@+id/user_imageview"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_toEndOf="@id/toolbarMenuNav"
            android:src="@drawable/icon_user"
            android:tint="@color/colorWhite"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/heartblink_imageview"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/user_imageview"

            android:src="@drawable/heart_white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toEndOf="@id/user_imageview"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbarLogo"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <View
                android:id="@+id/moveIconFromLeftMenuCategory"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_1sdp"
                android:visibility="gone" />

            <View
                android:id="@+id/moveIconFromLeftChooseOutlet"
                android:layout_width="-24dp"
                android:layout_height="@dimen/_10sdp"
                android:background="@color/black"
                android:visibility="gone" />

            <View
                android:id="@+id/moveIconFromLeftThanks"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_1sdp"
                android:visibility="gone" />

            <View
                android:id="@+id/moveIconFromLeft"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_1sdp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/toolbartxtTitleChooseOutlet"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerInside"
                android:layout_marginEnd="@dimen/_30sdp"
                android:src="@drawable/sushi_tei_header_white"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/toolbartxtTitleSummary"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerInside"
                android:layout_marginEnd="@dimen/_4sdp"
                android:src="@drawable/sushi_tei_header_white"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/toolbartxtTitle"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerInside"

                android:src="@drawable/sushi_tei_header_white"
                android:visibility="visible" />

            <View
                android:id="@+id/moveIcon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_1sdp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
