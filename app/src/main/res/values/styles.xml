<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAsh</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/colorAsh</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAsh</item>
        <item name="colorControlNormal">@color/colorAsh</item>
        <item name="colorControlActivated">@color/colorAsh</item>
    </style>

    <style name="custom_dialog_theme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/transparent_black</item>
    </style>
    <style name="custom_dialog_theme1" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="Theme.Transparent1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.Transparent2" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <!--Order History-->

    <style name="MyCustomTabLayoutNew" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/greendark</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearancess</item>

    </style>

    <style name="MyCustomTabLayoutNew1" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/greendark</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearancess</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="MyCustomTabTextAppearancess" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12.1sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FiveMenuTabTextAppearancess" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_5ssp</item>
     <!--   <item name="textAllCaps">true</item>-->
    </style>

    <style name="MyDatePicker" parent="@android:style/Theme.Holo.Light.Dialog">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:color">#0000FF</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/greendark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MonthPickerDialogStyle" >
        <item name="monthBgColor">@color/colorWhite</item>
        <item name="monthBgSelectedColor">@color/greendark</item>
        <item name="monthFontColorSelected">@color/colorWhite</item>
        <item name="monthFontColorNormal">@color/text_color</item>
        <item name="monthFontColorDisabled">@color/sliver</item>

        <item name="headerBgColor">@color/greendark</item>
        <item name="headerFontColorSelected">#fff</item>
        <item name="headerFontColorNormal">#85FFFFFF</item>
        <item name="headerTitleColor">#fff</item>

        <item name="dialogActionButtonColor">@color/greendark</item>
    </style>



    <style name="checkbox">
        <item name="android:scaleX">0.85</item>
        <item name="android:scaleY">0.85</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">-4dp</item>

    </style>
    <style name="MyThemeOverlay" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/greendark</item>
    </style>


</resources>
